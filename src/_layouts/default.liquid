<!doctype html>
<html lang="en">
<head>
  {% render "head", metadata: site.metadata, title: page.title %}
</head>
<body class="{{ page.layout }} {{ page.page_class }}">
<div data-server-rendered="true" id="app" class="content-wrapper bg-background-primary font-sans text-copy-primary leading-normal flex flex-col min-h-screen">
  {% render "navbar", metadata: site.metadata, page: page %}

  <main class="flex-grow">
    {{ content }}
  </main>

  {% render "footer", metadata: site.metadata %}
</div>
</body>
</html>
