<header :class="{'block': open, 'hidden': !open}" class="border-t-14 border-green-700">
  <nav x-data="{ open: false }">
    <div class="container mx-auto flex flex-wrap justify-between items-center py-8">
      <div class="flex-1 flex items-center justify-center sm:items-stretch sm:justify-start">
        <a href="/" class="active--exact active">
          <img src="/images/picture.jpeg" class="w-10 h-10 rounded-full" alt="logo">
        </a>
        <div class="block ml-6 mt-2">
          <a href="/" class="px-3 py-2 uppercase tracking-wide font-bold focus:outline-none transition duration-150 ease-in-out">{{ metadata.author }}</a>
        </div>
      </div>
      <div class="block lg:hidden">
        <div>
          <button  @click="open = true" class="flex items-center px-3 py-2 border rounded border-gray-500 hover:text-gray-600 hover:border-gray-600">
            <svg viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg" class="current-color h-3 w-3">
              <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z" fill="gray"></path>
            </svg>
          </button>
        </div>
      </div>
      <ul class="uppercase tracking-wide font-bold w-full block flex-grow lg:space-x-8 space-y-6 lg:space-y-0 lg:flex lg:flex-initial lg:w-auto items-center mt-8 lg:mt-0 hidden">
        <li><a href="/blog" class="text-copy-primary hover:text-gray-600">Blog</a></li>
        <li><a href="/pdfs/pedro-carmona-cv.pdf" class="text-copy-primary hover:text-gray-600">CV</a></li>
      </ul>
    </div>
    <div  x-show="open" @click.away="open = false" class="md:hidden block">
      <div class="px-2 pt-2 pb-3 sm:px-3 container mx-auto bg-gray-800">
        <a class=" bg-green-800 mt-1 block px-3 py-2 rounded-md text-base font-medium text-gray-300 hover:text-white hover:bg-grey-700 focus:outline-none focus:text-white focus:bg-grey-700" href="/blog">Blog</a>
        <a class="mt-1 block px-3 py-2 rounded-md text-base font-medium text-gray-300 hover:text-white hover:bg-grey-700 focus:outline-none focus:text-white focus:bg-grey-700" href="/pdfs/pedro-carmona-cv.pdf">CV</a>
      </div>
    </div>
  </nav>
</header>
